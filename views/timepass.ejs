    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        /* Header Styles */
        header {
            background-color: #000000;
            color: #fff;
            text-align: center;
        }

        /* Navbar Styles */
        .navbar {
            border-radius: 0px;
            width: 100%;
            z-index: 1000;
             box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1); 
            border-bottom: 0.5px solid #fff;
            background-color: #333;
            /* Change background color */
        }

        .navbar-brand {
            color: #fff !important;
            padding: 0 2px;
            padding-top:8px;
            font-weight:600;
            text-align: center;
        }

        .navbar-nav a.dj-link {
            color: #ffcc00 !important;
            font-weight: 5px;
            transition: color 0.3s ease-in-out;
        }

        .navbar-nav a.dj-link:hover {
            color: #fff !important;
        }

        a {
            color: #fff;
            text-decoration: none;
            font-weight:400;
            padding-left: 5px;
            font-weight: 5px;
        }

        .search-button {
            width:225px;
            height:15px;
            padding-bottom:4%;
            border-radius: 50px;
        }

        nav .container {
            border-bottom: 2px solid #e8e0e4;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            background-color: #e8e0e4;
            border-radius: 10px;
        }

        .input-group {
            display: flex;
        }

        .form-control {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .btn {
            border-radius: 50px;
            
        }



        /* Section 1 Styles */
        .section1 {
            background-color:  #fdfdfd;
            /* background-image:url("images/index.jpg");  */
            background-size: cover;
            background-position: center;
            height: 270px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #fff;
            text-align: center;
            padding-left:15%;
            padding-right:15%;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            border-bottom: 0.005px solid black;
        }
        .section1 h1 
        {
            font-size: 1.5em;
            padding-top:15%;
            margin-top: 0; /* Add this line to remove top margin */
            margin-bottom: 10px;
            font-weight: 0.5px;
            line-height: 1.5;
            color: #333;
        }





        .section1 .btn-compose 
        {
            background-color: #294861;
            color: #fff;
            border: none;
            transition: background-color 0.3s ease-in-out;
        }

        .section1 .btn-compose:hover {
            background-color: #555;
        }

        /* Section 2 Styles */
        .section2 {
            background-image: linear-gradient(rgb(237, 186, 194), rgb(105, 105, 144));
        }

        .recent-blogs h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        /* Card Styles */
        .card {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.5em;
            margin-bottom: 10px;
            color: #333;
        }

        .card-text {
            margin-bottom: 15px;
            color: #555;
        }

        .btn-primary {
            background-color: #333;
            border: none;
            transition: background-color 0.3s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #555;
        }
        .carousel
        {
            width: 100%;
            height:70%;
        }
        /* Footer Styles */
        .footer 
        {
            background-color: #333;
            color: #fff;
            padding: 10px 0;
            align-items: center;
            justify-content: center;
            padding-left: 30%;
            padding-right: 25%;
        }

        .footer span 
        {
            padding-left: 50px;
        }

        .footer a
        {
            color: #fff;
            text-decoration: underline;
            padding: 0 5px;
        }

        /* Blog Types Section Styles */
        .blog-types-section {
            padding-top: 10%;
            padding-bottom: 10%;
            display: flex;
            overflow: hidden;
            margin: 0;
            padding: 1% 15% 0;
            background-color: #e8e0e4;
        }

        .scrollable-half {
            width: 50%;
            overflow-y: auto;
            max-height: 400px;
            font-size:10px;
            background-color: #e8e0e4;
            box-shadow: 0 0 1px rgba(0, 0, 0, 0.1);
        }

        .blog-specifications {
            width: 50%;
            padding-left: 5px;
            font-size:10px;
            background-color: #e8e0e4;
        }

        .blog-types-section h2 {
            text-align: center;
        }

        .div1 {
            padding-bottom: 15%;
        }

        .div1 h1 {
            font-size: 15px;
            padding-left: 20%;
            padding-right: 20%;
        }

        .fixed-navbar {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }


        /* Add a class for the fixed navigation */
        .fixed-nav-padding {
            padding-top: 60px; /* Adjust this value based on the height of your navigation */
        }

       .scrollable-container {
            padding-top:7%;
            width: 100%;
            overflow-x: auto;
            display: flex;
            background-color: aliceblue;
        }

        .scrollable-item {
            flex: 0 0 auto;
            margin-right: 1.5px; /* Adjust margin as needed */
            margin-left:2px;
        }

        img {
            max-width: 70%;
            height: auto;
            display: block;
        }
        @media (max-width: 767px) {
            .search-button {
                margin-right: 0;
                margin-top: 10px;
            }


            .btn {
                margin-top: 10px;
            }
        }
        * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    /* background-color: #e8e0e4; */
}

    </style>
</head>
