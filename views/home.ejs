    <style>
        /* Reset default margin and padding */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }



        /* Navbar Styles */
        .navbar {
            border-radius: 0vh;
            width: 100%;
            height:15vh;
            position:fixed !important;
            z-index: 1000;
            box-shadow: 0vh 2vh 5vh rgba(0, 0, 0, 0.1);
            border-bottom: 0.5vh solid #333;
            background-color: #333;
        }

        .navbar-brand {
            color: #fff !important;
            padding: 0 2vh;
            padding-top: 3vh;
            font-weight: 600;
            font-size:5vh;
            text-align: center;
        }

        .navbar-nav a.dj-link {
            color: #ffcc00 !important;
            font-weight: 5vh;
            transition: color 0.3s ease-in-out;
        }

        .navbar-nav a.dj-link:hover {
            color: #fff !important;
        }

        span a {
            color: #fff;
            text-decoration: none;
            font-weight: 400;
            font-size:3vh;
            padding-left: 2vh;
            font-weight: 5vh;
        }

        .search-button {
            width: 70vh !important;
            height: 3.5vh;
            padding-top:1vh !important;
            border-radius: 5vh;
            padding-left:30vh !important;
        }
        .secondnav
        {
            padding-left:25vh !important;
            padding-top:3vh !important;
        }

        nav .container {
            border-bottom: 1vh solid #e8e0e4;
            box-shadow: 0vh 2vh 5vh rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            background-color: #e8e0e4;
            border-radius: 2vh;
        }
        nav
        {
            margin-bottom:10vh !important
        }

        .input-group {
            display: flex;
        }

        .form-control {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .btn {
            border-radius: 5vh;
        }

        /* Section 1 Styles */
        .section1 {
            background-color: #fdfdfd;
            background-size: cover;
            background-position: center;
            height: 80vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #fff;
            text-align: center;
            padding-left: 5vh;
            padding-right: 5vh;
            padding-top:20%;
            box-shadow: 0vh 2vh 5vh rgba(0, 0, 0, 0.1);
            border-bottom: 0.005vh solid black;
        }

        .section1 h1 {
           
            padding-top: 10vh;
            margin-top: 0;
            margin-bottom: 2vh;
            font-weight: 2vh;
            line-height: 1.5;
            color: #333;
        }
        .div1 h1
        {
            font-size:2vh;
        }

        .section1 .btn-compose {
            background-color: #294861;
            color: #fff;
            border: none;
            transition: background-color 0.3s ease-in-out;
        }

        .section1 .btn-compose:hover {
            background-color: #555;
        }

        /* Section 2 Styles */
        .section2 {
            background-image: linear-gradient(rgb(237, 186, 194), rgb(132, 132, 148));
            width:100%;
            height:70vh;
        }

        .recent-blogs h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        /* Card Styles */
        .card {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            width:40vh;
            height:50vh;
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card-body {
            padding: 12.5%;
        }
        .card-footer
        {
            padding:6%;
            
        }

        .card-title {
            font-size: 1.5em;
            margin-bottom: 10px;
            color: #333;
        }

        .card-text {
            margin-bottom: 15px;
            color: #555;
        }

        .btn-primary {
            background-color: #333;
            border: none;
            transition: background-color 0.3s ease-in-out;
        }
        
   
        .btn-primary:hover {
            background-color: #555;
        }

        .carousel {
            width: 100%;
            height: 70%;
        }

        /* Footer Styles */
        .footer {
            background-color: #333;
            color: #fff;
            padding: 10px 0;
            align-items: center;
            justify-content: center;
            padding-left: 70vh;
            padding-right:30vh;
        }

        .footer span {
            padding-left: 20%;
        }

        .footer a {
            color: #fff;
            text-decoration: underline;
            padding: 0 5px;
        }

        /* Blog Types Section Styles */
        .blog-types-section {
            padding-top: 10%;
            padding-bottom: 10%;
            display: flex;
            overflow: hidden;
            margin: 0;
            padding: 3% 15% 0;
            background-color: #e8e0e4;
        }

        .scrollable-half {
            width: 50%;
            overflow-y: auto;
            max-height: 400px;
            font-size: 3.5vh;
            background-color: #e8e0e4;
            box-shadow: 0 0 1px rgba(0, 0, 0, 0.1);
        }

        .blog-specifications {
            width: 50%;
            padding-left: 5vh;
            font-size: 3.5vh;
            background-color: #e8e0e4;
        }

        .blog-types-section h2 {
            text-align: center;
        }

        .div1 {
            padding-bottom: 15%;
        }

        .div1 h1 {
            font-size: 15px;
            padding-left: 20%;
            padding-right: 20%;
        }

        .fixed-navbar {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1000;
        }
        
        /* Add a class for the fixed navigation */
        .fixed-nav-padding {
            padding-top: 60px; /* Adjust this value based on the height of your navigation */
        }

        .scrollable-container {
            padding-top: 7%;
            padding-right:5%;
            width: 100%;
            overflow-x: auto;
            display: flex;
            background-color: aliceblue;
        }

        .scrollable-item {
            flex: 0 0 auto;
            padding-right:5%;
            margin-right: 1.5%; /* Adjust margin as needed */
            margin-left: 2px;
        }

        img {
            max-width: 100%;
            height: auto;
            display: block;
        }
